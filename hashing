#include <iostream>
#include <string>
using namespace std;

struct cust {
    string name;
    int TellNo;
};

int main() {
    cust Hash[10];    // Simple hash 
    cust LHash[10];   // Linear probing
    cust QHash[10];   // Quadratic probing
    cust DHash[10];   // Double hashing
    int total, tel;
    int h, n;
    string tname;

    // Initialize all hash tables
    for (int i = 0; i < 10; i++) {
        Hash[i].name = LHash[i].name = QHash[i].name = DHash[i].name = "none";
        Hash[i].TellNo = LHash[i].TellNo = QHash[i].TellNo = DHash[i].TellNo = -1;
    }

    cout << "\nHow many records? ";
    cin >> n;

    for (int i = 0; i < n; i++) {
        cout << "\nEnter the name: ";
        cin >> tname;
        cout << "Enter the telephone number: ";
        cin >> tel;

        total = 0;
        for (int k = 0; tname[k] != '\0'; k++) {
            total += tname[k];
        }
        cout << "\nTotal hash value is: " << total;
        h = total % 10;

        // Simple Hashing
        if (Hash[h].TellNo == -1) {
            Hash[h].name = tname;
            Hash[h].TellNo = tel;
        } else {
            cout << "\nCollision occurred for " << tname << " in Simple Hashing.";
        }

        // Linear Probing
        int flag = 0;
        for (int j = 0; j < 10; j++) {
            int idx = (h + j) % 10;
            if (LHash[idx].TellNo == -1) {
                LHash[idx].name = tname;
                LHash[idx].TellNo = tel;
                flag=1;
                break;
            }
        }
        if (flag==0)
            cout << "\nLinear Probing failed for " << tname;

        // Quadratic Probing
         flag=0;
        for (int j = 0; j < 10; j++) {
            int idx = (h + j * j) % 10;
            if (QHash[idx].TellNo == -1) {
                QHash[idx].name = tname;
                QHash[idx].TellNo = tel;
                flah=1;
                break;
            }
        }
        if (flag==1)
            cout << "\nQuadratic Probing failed for " << tname;

        // Double Hashing
        flag=0;
        int h2 = 7 - (total % 7);   // second hash function
        for (int j = 0; j < 10; j++) {
            int idx = (h + j * h2) % 10;
            if (DHash[idx].TellNo == -1) {
                DHash[idx].name = tname;
                DHash[idx].TellNo = tel;
                flah=1;
                break;
            }
        }
        if (flag==0)
            cout << "\nDouble Hashing failed for " << tname;
    }

    // Display hash tables
    cout << "\n\nSimple Hash Table\n";
    for (int i = 0; i < 10; i++) {
        cout << Hash[i].name << " - " << Hash[i].TellNo << "\n";
    }

    cout << "\nLinear Probing Hash Table\n";
    for (int i = 0; i < 10; i++) {
        cout << LHash[i].name << " - " << LHash[i].TellNo << "\n";
    }

    cout << "\nQuadratic Probing Hash Table\n";
    for (int i = 0; i < 10; i++) {
        cout << QHash[i].name << " - " << QHash[i].TellNo << "\n";
    }

    cout << "\nDouble Hashing Hash Table\n";
    for (int i = 0; i < 10; i++) {
        cout << DHash[i].name << " - " << DHash[i].TellNo << "\n";
    }

    return 0;
}
