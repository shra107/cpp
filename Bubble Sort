#include <iostream>
using namespace std;

// Bubble Sort function (Ascending)
void bubbleSort(float G[], int n)
{
    for (int pass = 1; pass < n; pass++)
    {
        int comparisons = 0;
        int swap = 0;
        float temp;

        for (int j = 0; j < n - pass; j++)
        {
            comparisons++;

            if (G[j] > G[j + 1])     // Swap if elements are in wrong order
            {
                temp = G[j];
                G[j] = G[j + 1];
                G[j + 1] = temp;
                swap = 1;
            }
        }

        cout << "Pass " << pass << " | Comparisons: " << comparisons << " | Array: ";
        for (int i = 0; i < n; i++)
        {
            cout << G[i] << " ";
        }
        cout << endl;

        if (swap == 0)      // If no swap occurs â†’ already sorted
            break;
    }
}

int main()
{
    int n;

    cout << "\nHow many students for Bubble Sort? ";
    cin >> n;

    float G[20];

    cout << "Enter percentage of students:\n";
    for (int i = 0; i < n; i++)
    {
        cin >> G[i];
    }

    cout << "\nBefore Bubble Sort: ";
    for (int i = 0; i < n; i++)
    {
        cout << G[i] << " ";
    }
    cout << endl;

    // Calling function
    bubbleSort(G, n);

    // Display Top 5 Percentages
    cout << "\nTop 5 Percentages:\n";

    if (n >= 5)
    {
        for (int i = n - 1; i >= n - 5; i--)
        {
            cout << G[i] << "%" << endl;
        }
    }
    else
    {
        cout << "Less than 5 students. Displaying available percentages:\n";
        for (int i = n - 1; i >= 0; i--)
        {
            cout << G[i] << "%" << endl;
        }
    }

    return 0;
}
